<UserControl x:Class="VoiceRecorder.Core.WaveFormControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:my="clr-namespace:VoiceRecorder.Core">
    <ScrollViewer CanContentScroll="True" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Hidden">
        <Grid>
            <my:WaveFormVisual Height="100" VerticalAlignment="Center" HorizontalAlignment="Left" x:Name="waveFormRenderer"/>
            <my:PositionSelectionControl HorizontalAlignment="Left" x:Name="posSelection" />
        </Grid>
    </ScrollViewer>            
</UserControl>
